     stage('stage-1'){
       steps{
         echo "Hi, this is Shrikant into stage-1"
            }
                     }

     stage('stage-2'){
       steps{
         echo "Entering into 2nd stage"
            }
                     }

     stage('stage-3'){
       steps{
         echo "And this is the 3rd Stage"
            }
                     }
         }
        }
